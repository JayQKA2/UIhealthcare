<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="360"
                android:endColor="#FFA500"
                android:startColor="#3D8BFF"
                android:type="sweep"
                android:useLevel="false" />
            <stroke
                android:width="12dp"
                android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>